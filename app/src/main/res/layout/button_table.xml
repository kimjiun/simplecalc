<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_side"
    android:layout_weight="1"
    android:stretchColumns="*">
    <TableRow
        android:layout_weight="1"
        android:gravity="center_vertical">
        <Button
            android:id="@+id/btn_clear"
            android:textColor="#FF0000"
            android:textSize="@dimen/text_size_button"
            android:layout_margin="@dimen/margin_button"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_button"
            android:text="C"/>
        <Button
            android:textSize="@dimen/text_size_button"
            android:layout_margin="@dimen/margin_button"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_button"
            android:text="()"/>
        <Button
            android:textSize="@dimen/text_size_button"
            android:layout_margin="@dimen/margin_button"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_button"
            android:text="%"/>
        <Button
            android:textSize="@dimen/text_size_button"
            android:layout_margin="@dimen/margin_button"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_button"
            android:text="รท"/>
    </TableRow>
    <TableRow
        android:layout_weight="1">
        <Button
            android:textSize="@dimen/text_size_button"
            android:layout_margin="@dimen/margin_button"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_button"
            android:text="7"/>
        <Button
            android:textSize="@dimen/text_size_button"
            android:layout_margin="@dimen/margin_button"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_button"
            android:text="8"/>
        <Button
            android:textSize="@dimen/text_size_button"
            android:layout_margin="@dimen/margin_button"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_button"
            android:text="9"/>
        <Button
            android:textSize="@dimen/text_size_button"
            android:layout_margin="@dimen/margin_button"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_button"
            android:text="X"/>
    </TableRow>
    <TableRow
        android:layout_weight="1">
        <Button
            android:textSize="@dimen/text_size_button"
            android:layout_margin="@dimen/margin_button"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_button"
            android:text="4"/>
        <Button
            android:textSize="@dimen/text_size_button"
            android:layout_margin="@dimen/margin_button"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_button"
            android:text="5"/>
        <Button
            android:textSize="@dimen/text_size_button"
            android:layout_margin="@dimen/margin_button"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_button"
            android:text="6"/>
        <Button
            android:textSize="@dimen/text_size_button"
            android:layout_margin="@dimen/margin_button"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_button"
            android:text="-"/>
    </TableRow>
    <TableRow
        android:layout_weight="1">
        <Button
            android:textSize="@dimen/text_size_button"
            android:layout_margin="@dimen/margin_button"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_button"
            android:text="1"/>
        <Button
            android:textSize="@dimen/text_size_button"
            android:layout_margin="@dimen/margin_button"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_button"
            android:text="2"/>
        <Button
            android:textSize="@dimen/text_size_button"
            android:layout_margin="@dimen/margin_button"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_button"
            android:text="3"/>
        <Button
            android:textSize="@dimen/text_size_button"
            android:layout_margin="@dimen/margin_button"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_button"
            android:text="+"/>
    </TableRow>
    <TableRow
        android:layout_weight="1">
        <Button
            android:textSize="@dimen/text_size_button_small"
            android:layout_margin="@dimen/margin_button"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_button"
            android:text="+/-"/>
        <Button
            android:textSize="@dimen/text_size_button"
            android:layout_margin="@dimen/margin_button"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_button"
            android:text="0"/>
        <Button
            android:textSize="@dimen/text_size_button"
            android:layout_margin="@dimen/margin_button"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_button"
            android:text="."/>
        <Button
            android:textSize="@dimen/text_size_button"
            android:layout_margin="@dimen/margin_button"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_button"
            android:text="="/>
    </TableRow>
</TableLayout>